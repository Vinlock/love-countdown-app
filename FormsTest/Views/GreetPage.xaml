<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
        xmlns="http://xamarin.com/schemas/2014/forms" 
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
        x:Class="FormsTest.GreetPage">
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Label x:Name="days" FontSize="70" XAlign="Center" YAlign="Center" FontAttributes="Bold" />
        <Label x:Name="hours" FontSize="60" XAlign="Center" YAlign="Center" FontAttributes="Bold" />
        <Label x:Name="minutes" FontSize="50" XAlign="Center" YAlign="Center" FontAttributes="Bold" />
        <Label x:Name="seconds" FontSize="40" XAlign="Center" YAlign="Center" FontAttributes="Bold" />
        <Label x:Name="label" FontSize="25" XAlign="Center" YAlign="Center" Text="until we are together again!" />
    </StackLayout>
</ContentPage>
